<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTint</item>
        <item name="colorControlNormal">@color/colorTint</item>
    </style>

    <style name="ProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>

    <style name="PlaybackButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_margin">12dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="SmallPlaybackButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="PlaybackText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
